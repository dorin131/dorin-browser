    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and debug Browser",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/browser/browser",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Browser",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Build and debug Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/tests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Tests",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}